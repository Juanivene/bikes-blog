{
  "name": "template-next",
  "version": "0.1.10",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npx tsx ./config/pre-build.ts --mode development",
    "start": "next start",
    "lint": "npx tsx ./config/pre-build.ts --ignore-build --fix",
    "lint:css": "stylelint '**/*.{css,scss}'",
    "prettier": "npx prettier -w .",
    "prettier:check": "npx prettier -c .",
    "prepare": "husky",
    "test": "echo 'ðŸ’» Running tsc...' && tsc --pretty && pnpm lint-staged --allow-empty",
    "test:ui": "vitest --ui",
    "test:vitest": "vitest",
    "test:watch": "vitest --watch",
    "update": "ncu",
    "update:check": "ncu --interactive --format group",
    "server": "json-server --watch db.json --port 4000"
  },
  "dependencies": {
    "@headlessui/react": "2.1.2",
    "@hookform/resolvers": "3.9.0",
    "autoprefixer": "10.4.20",
    "clsx": "2.1.1",
    "daisyui": "4.12.10",
    "dayjs": "1.11.12",
    "flatpickr": "4.6.13",
    "gray-matter": "^4.0.3",
    "json-server": "1.0.0-beta.3",
    "next": "15.0.4",
    "next-themes": "0.4.4",
    "postcss": "8.4.40",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "7.52.2",
    "react-icons": "5.2.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.0",
    "remark-html": "^16.0.1",
    "sonner": "1.5.0",
    "sweetalert2": "11.12.4",
    "tailwind-merge": "2.4.0",
    "tailwindcss": "3.4.7",
    "tsx": "^4.19.2",
    "typescript": "5.3.2",
    "vaul": "0.9.1",
    "zod": "3.23.8",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-angular": "19.3.0",
    "@next/eslint-plugin-next": "^15.0.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/gradient-string": "1.1.6",
    "@types/jest": "^29.5.14",
    "@types/node": "22.1.0",
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.2",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^2.1.8",
    "eslint": "8.57.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsx-a11y": "6.9.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "4.6.2",
    "gradient-string": "2.0.2",
    "husky": "9.1.4",
    "jsdom": "^25.0.1",
    "lint-staged": "15.2.8",
