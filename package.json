{
  "name": "template-next",
  "version": "0.1.9",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npx tsx ./config/pre-build.ts --mode development",
    "start": "next start",
    "lint": "npx tsx ./config/pre-build.ts --ignore-build",
    "lint:css": "stylelint '**/*.{css,scss}'",
    "prettier": "npx prettier -w .",
    "prettier:check": "npx prettier -c .",
    "prepare": "husky",
    "test": "echo 'ðŸ’» Running tsc...' && tsc --pretty && pnpm lint-staged --allow-empty",
    "test:ui": "vitest --ui",
    "test:vitest": "vitest",
    "test:watch": "vitest --watch",
    "update": "ncu",
    "update:check": "ncu --interactive --format group"
  },
  "dependencies": {
    "@headlessui/react": "2.2.0",
    "@hookform/resolvers": "3.9.1",
    "autoprefixer": "10.4.20",
    "clsx": "2.1.1",
    "daisyui": "4.12.14",
    "dayjs": "1.11.13",
    "flatpickr": "4.6.13",
    "next": "15.0.4",
    "next-themes": "0.4.3",
    "postcss": "8.4.49",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-hook-form": "7.53.2",
    "react-icons": "5.3.0",
    "sonner": "1.7.0",
    "sweetalert2": "11.14.5",
    "tailwind-merge": "2.5.5",
    "tailwindcss": "3.4.15",
    "typescript": "5.7.2",
    "vaul": "1.1.1",
    "zod": "3.23.8",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.6.0",
    "@commitlint/config-angular": "19.6.0",
    "@next/eslint-plugin-next": "15.0.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/gradient-string": "1.1.6",
    "@types/jest": "^29.5.14",
    "@types/node": "22.10.1",
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.2",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^2.1.6",
    "eslint": "8.57.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-next": "15.0.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.37.2",
    "eslint-plugin-react-hooks": "4.6.2",
    "gradient-string": "3.0.0",
    "husky": "9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "15.2.10",
    "npm-check-updates": "^17.1.11",
    "prettier": "3.4.1",
    "prettier-plugin-tailwindcss": "0.5.12",
    "stylelint": "^16.11.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-tailwindcss": "^0.0.7",
    "stylelint-prettier": "^5.0.2",
    "vitest": "^2.1.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier -w",
      "vitest related --run"
    ],
    "*.css": [
      "stylelint --fix"
    ],
    "*.{html,css,md,json}": [
      "prettier -w"
    ]
