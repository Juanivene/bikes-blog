    "stylelint": "^16.8.2",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-tailwindcss": "^0.0.7",
    "stylelint-prettier": "^5.0.2",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier -w",
      "vitest related --run"
    ],
    "*.{html,css,md,json}": [
      "prettier -w"
    ]
  }
